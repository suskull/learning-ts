{
  "name": "typescript-mastery-course",
  "version": "1.0.0",
  "private": true,
  "description": "A comprehensive TypeScript course for mid-level JavaScript developers",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",
    "dev:web": "npm run dev --workspace=@typesafe/web",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}